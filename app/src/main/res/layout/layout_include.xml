<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Good Morning! \n\nToday its a Special Day"
        android:textSize="25sp"
        android:fontFamily="times"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <include android:id="@+id/material_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/layout_icons"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="20dp"
        />

    <include android:id="@+id/material_card1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/layout_icons"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toEndOf="@+id/material_card"
        android:layout_margin="20dp"
        />

    <include android:id="@+id/material_card2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/layout_icons"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toEndOf="@+id/material_card1"
        android:layout_margin="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>